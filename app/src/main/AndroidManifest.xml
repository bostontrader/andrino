<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fyrecloud.andrino" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ajs_icon"
        android:label="@string/andrino"
        android:name="com.fyrecloud.andrino.AndrinoApplication"
    >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/andrino"
            android:theme="@style/Theme.AppCompat.Light"
        >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.About"></activity>
        <activity android:name=".activities.Editor"></activity>
        <activity android:name=".activities.SettingsActivity"></activity>
    </application>

</manifest>
